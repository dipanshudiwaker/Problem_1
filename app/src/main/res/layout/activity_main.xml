<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:padding="15dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Microsoft Teams"
        android:textAlignment="center"
        android:textColor="#342455"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="63dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/picture"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Get started with your work, school or \n personal Microsoft account "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="243dp" />

    <EditText
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:padding="10dp"
        android:hint="Enter email, phone,or Skype" />

    <Button
        android:id="@+id/button"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#424B83"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="354dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="164dp"
        android:layout_height="31dp"
        android:layout_marginTop="5dp"
        android:text="Get help with signing in "
        android:textColor="#424B83"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="419dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/outline"
        android:padding="10dp"
        android:text="Join a meeting"
        android:textAllCaps="false"
        android:textColor="#424B83"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/outline"
        android:drawableLeft="@drawable/microsoftlogo"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="Sign Up for free"
        android:textAllCaps="false"
        android:textColor="#424B83" />
</LinearLayout>




